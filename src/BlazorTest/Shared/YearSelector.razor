<div class="col-sm">
	<h5>@ItemType Year</h5>
	<input type="number" placeholder="@ItemType Year" 
		@bind-value="@InitialValue" @oninput="@OnInput" />
</div>

@code {
	[Parameter]
	public int? InitialValue { get; set; }
	[Parameter]
	public string? ItemType { get; set; }
	public string ListId => ItemType?.ToLower() + "YearList";
	[Parameter]
	public EventCallback<int?> ValueChanged { get; set; }

	private async Task OnInput(ChangeEventArgs e)
	{
		var year = default(int?);
		if (int.TryParse(e.Value?.ToString(), out var num))
		{
			year = num;
		}
		await ValueChanged.InvokeAsync(year).ConfigureAwait(false);
	}
}
