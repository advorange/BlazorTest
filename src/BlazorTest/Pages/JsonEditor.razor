@page "/jsoneditor"
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Json Editor</PageTitle>

<MudText Typo="Typo.h4">Json Editor</MudText>

<div class="row">
	<div class="col-8" id="@IDs.JsonEditor" />
	<div class="col-4">
		<MudTextField ReadOnly="true" Variant="Variant.Outlined" Lines="25"
					  Label="Output Json" @bind-Value="@Json" />
		<MudTextField ReadOnly="true" Variant="Variant.Outlined" Lines="10"
					  Label="Validation Errors" @bind-Value="@Errors" />
	</div>
</div>